<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<UseWPF>true</UseWPF>
		<UseWindowsForms>false</UseWindowsForms>
		<UseStaticWebAssets>true</UseStaticWebAssets>
	</PropertyGroup>

	<ItemGroup>
	  <Content Remove="wwwroot\fonts\kcd_display.ttf" />
	  <Content Remove="wwwroot\fonts\kcd_light.ttf" />
	  <Content Remove="wwwroot\fonts\kcd_regular.ttf" />
	  <Content Remove="wwwroot\fonts\warhorse_manuscript.ttf" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.WebView.Wpf" Version="8.0.6" />
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.5" />
		<PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="8.0.1" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\KCD2Keybinder.GUI.Shared\KCD2Keybinder.GUI.Shared.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Resource Include="wwwroot\fonts\kcd_light.ttf" />
	  <Resource Include="wwwroot\fonts\kcd_display.ttf" />
	  <Resource Include="wwwroot\fonts\kcd_regular.ttf" />
	  <Resource Include="wwwroot\fonts\warhorse_manuscript.ttf" />
	</ItemGroup>

	<ItemGroup>
		<Content Update="wwwroot\images\credits_background.jpg">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

</Project>
