<div class="key-container" style="@($"width: {GetWidth()}px; height: {Size}px;")" onclick="@ClickButton">
    <img class="@($"key-bg {(IsActivated ? "key-pressed" : "")} {(HasConflict ? "key-conflict" : "")}")"
         src="@GetKey()"
         alt="Key background" />

    <span class="key-label">@Label</span>

</div>

<style>
    .key-container {
        position: relative;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        user-select: none;
        cursor: pointer;
    }

    .key-bg {
        position: absolute;
        filter: drop-shadow(4px 4px 8px rgba(0, 0, 0, 1));
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
        pointer-events: none;
        transition: all 0.15s;
    }

    .key-label {
        position: relative;
        font-family: KCD;
        font-size: 18px;
        font-weight: 600;
        color: #030408;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.8);
    }

    .key-container:hover .key-bg{
        filter: brightness(0.75);
    }

    .key-container:active .key-bg{
        filter: brightness(0.5) drop-shadow(2px 2px 2px rgba(0, 0, 0, 1));
    }

    .key-pressed{
        filter: brightness(0.5) drop-shadow(0px 0px 6px rgba(255, 190, 0, 1));
    }

    .key-container:hover .key-pressed{
        filter: brightness(0.5) drop-shadow(0px 0px 4px rgba(255, 190, 0, 0.8));
    }

    .key-container:active .key-pressed{
        filter: brightness(0.5) drop-shadow(0px 0px 2px rgba(255, 190, 0, 0.6));
    }

    .key-conflict{
        filter: brightness(0.5) drop-shadow(0px 0px 6px rgba(200, 15, 5, 1));
    }

    .key-container:hover .key-conflict {
        filter: brightness(0.5) drop-shadow(0px 0px 4px rgba(200, 15, 5, 0.8));
    }

    .key-container:active .key-conflict {
        filter: brightness(0.5) drop-shadow(0px 0px 2px rgba(200, 15, 5, 0.6));
    }
</style>